<launch>

    <node name="map_server" pkg="map_server" type="map_server" args="$(find holly_navigation)/map.yaml"/>

    <include file="$(find amcl)/examples/amcl_omni.launch" />

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find holly_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find holly_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find holly_navigation)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find holly_navigation)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find holly_navigation)/config/base_local_planner_params.yaml" command="load" />
    </node>

</launch>